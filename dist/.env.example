# AP-only configuration for TrafficWidget
# Copy this file to .env and fill in your values. Do NOT commit your real .env.

# AP SSH connection (device you want to read traffic from)
AP_HOST=192.168.1.1
AP_USER=admin
AP_PASSWORD=
AP_SSH_KEY=
AP_PORT=22

# Interface to monitor on the AP
# Set to exact name (e.g., unet0, br0, wwan0, ppp0) or use auto to pick the busiest on startup
INTERFACE=auto

# UI + behavior
POLL_INTERVAL=1.0
ALWAYS_ON_TOP=0
START_MINIMIZED=0
TEXT_OVERLAY=1
