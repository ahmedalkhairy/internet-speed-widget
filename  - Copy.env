# Router login (primary 4G/LTE router)
ROUTER_HOST=192.168.0.1
ROUTER_USER=admin
PASSWORD=dragon100
SSH_KEY=

# Interface + UI
INTERFACE=eth0.2
POLL_INTERVAL=1.0
ALWAYS_ON_TOP=0
START_MINIMIZED=0
TEXT_OVERLAY=1
SHOW_STATUS=1

# Admin commands (override if needed for your firmware)
CMD_REBOOT_ROUTER=reboot
CMD_RESTART_AP=(wifi reload || wifi up || /etc/init.d/network reload || /etc/init.d/hostapd restart || true) >/dev/null 2>&1
CMD_RECONNECT_4G=(ifdown eth0.2 || ifdown wan) >/dev/null 2>&1 && sleep 2 && (ifup eth0.2 || ifup wan) >/dev/null 2>&1
CMD_RESTART_NETWORK=(/etc/init.d/network restart || systemctl restart network || true) >/dev/null 2>&1

# Optional separate WiFi AP (if you have a second device)
AP_HOST=192.168.1.1
AP_USER=root
AP_PASSWORD=sauvtm
AP_SSH_KEY=
AP_CMD_REBOOT=reboot

